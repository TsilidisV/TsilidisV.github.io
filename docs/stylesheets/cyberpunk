}

/* --- Table Styling --- */
.md-typeset table:not([class]) {
  background: rgba(0,0,0,0.3);
  border: 1px solid var(--neon-cyan);
  box-shadow: 0 0 10px rgba(0, 243, 255, 0.1);
}

.md-typeset table:not([class]) th {
