/* Cyberpunk / Outrun Theme for MkDocs Material 
   Author: Gemini
   Usage: Add to extra_css in mkdocs.yml and set palette scheme to 'slate'
*/

:root {
  /* --- Core Color Palette --- */
  --cyber-void: #050509;       /* Deepest Black/Blue */
  --cyber-dark: #0b0c15;       /* Sidebar/Backgrounds */
  --cyber-panel: #13141f;      /* Cards/Code blocks */
  
  --neon-cyan: #00f3ff;        /* Primary Accent */
  --neon-pink: #bc13fe;        /* Secondary Accent */
  --neon-green: #0aff0a;       /* Success/Strings */
  --neon-red: #ff2a2a;         /* Error/Warning */
  
  --hologram-white: #e0f7fa;   /* Main Text */
  --hologram-dim: #94a3b8;     /* Muted Text */

  /* --- MkDocs Material Variable Overrides --- */
  
  /* Text Colors */
  --md-default-fg-color: var(--hologram-white);
  --md-default-fg-color--light: var(--hologram-dim);
  --md-default-fg-color--lighter: var(--hologram-dim);
  --md-default-fg-color--lightest: var(--hologram-dim);

  /* Background Colors */
  --md-default-bg-color: var(--cyber-void);
  --md-default-bg-color--light: var(--cyber-panel);
  --md-default-bg-color--lighter: var(--cyber-panel);
  --md-default-bg-color--lightest: var(--cyber-panel);

  /* Primary Branding (Header/Links) */
  --md-primary-fg-color: var(--neon-cyan);
  --md-primary-bg-color: rgba(5, 5, 9, 0.85); /* Semi-transparent header */
  --md-primary-fg-color--light: var(--neon-pink);
  --md-primary-fg-color--dark: var(--neon-cyan);
  
  /* Accent Colors */
  --md-accent-fg-color: var(--neon-pink);
  
  /* Code Blocks */
  --md-code-bg-color: #000000;
  --md-code-fg-color: var(--neon-green);
  
  /* Admonitions (Note boxes) */
  --md-admonition-bg-color: rgba(0, 243, 255, 0.05);

  /* Typography glow */
  --text-glow-blue: 0 0 5px rgba(0, 243, 255, 0.5);
  --text-glow-pink: 0 0 5px rgba(188, 19, 254, 0.5);
}

/* --- Global Background & Grid Effect --- */
body {
  background-color: var(--cyber-void);
  background-image: 
    linear-gradient(rgba(0, 243, 255, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 243, 255, 0.03) 1px, transparent 1px),
    radial-gradient(circle at 50% 50%, rgba(188, 19, 254, 0.05), transparent 70%);
  background-size: 40px 40px, 40px 40px, 100% 100%;
  background-position: center top;
  background-attachment: fixed;
}

/* --- Header Styling --- */
.md-header {
  border-bottom: 1px solid var(--neon-cyan);
  backdrop-filter: blur(5px);
  box-shadow: 0 0 15px rgba(0, 243, 255, 0.2);
}

.md-header__title {
  font-family: 'Courier New', Courier, monospace; /* Tech feel */
  letter-spacing: 1px;
  text-transform: uppercase;
  text-shadow: var(--text-glow-blue);
}

/* --- Sidebar Styling --- */
.md-sidebar {
  background: transparent;
}

.md-nav__link--active {
  color: var(--neon-cyan) !important;
  text-shadow: 0 0 8px var(--neon-cyan);
  border-left: 2px solid var(--neon-cyan);
  padding-left: 10px;
}

/* --- Typography & Content --- */
.md-typeset h1, 
.md-typeset h2, 
.md-typeset h3 {
  color: var(--neon-cyan);
  font-family: 'Courier New', Courier, monospace;
