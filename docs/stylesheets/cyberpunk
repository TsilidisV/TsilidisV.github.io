}



/* --- Bento Grid Layout --- */
.bento-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  grid-auto-rows: minmax(150px, auto);
  gap: 1.5rem;
  margin: 2em 0;
}

.bento-card {
  background: rgba(19, 20, 31, 0.4); /* Transparent version of --cyber-panel */
  border: 1px solid rgba(0, 243, 255, 0.2);
  border-radius: 12px; /* Smooth corners for modern feel */
  padding: 1.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(4px);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* Card Hover Effect */
.bento-card:hover {
  transform: translateY(-4px) scale(1.01);
  box-shadow: 0 10px 30px -10px rgba(0, 243, 255, 0.2);
  border-color: var(--neon-cyan);
  background: rgba(19, 20, 31, 0.8);
}

/* Add a scanline effect on hover */
.bento-card::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to bottom,
    transparent 50%,
    rgba(0, 243, 255, 0.03) 50%
  );
  background-size: 100% 4px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.bento-card:hover::after {
  opacity: 1;
}

/* Typography inside cards */
.bento-card h3,
.bento-card h4 {
  margin-top: 0;
  color: var(--neon-cyan);
  border-bottom: none; /* Remove default mkdocs underline */
  font-size: 1.2rem;
}

.bento-card p {
  font-size: 0.95rem;
  color: var(--hologram-dim);
  line-height: 1.5;
}

